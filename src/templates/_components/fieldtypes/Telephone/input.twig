{% import "_includes/forms" as forms %}

<div class="flex">

    {{ forms.select({
        size: 'inline',
        label: 'Country Code',
        id: name ~ 'CountryCode',
        name: name ~ '[countryCode]',
        value: viewData ? viewData.countryCode : settings.defaultCountryCode,
        options: countryOptions
    }) }}

    <div class="flex-grow">
        {{ forms.text({
            class: '',
            label: 'Phone Number',
            id: name ~ 'PhoneNumber',
            name: name ~ '[rawInput]',
            value: viewData ? viewData.rawInput
        }) }}
    </div>

</div>

